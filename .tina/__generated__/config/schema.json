                      "link": "/"
                    }
                  },
                  "fields": [
                    {
                      "label": "Label",
                      "name": "label",
                      "type": "string"
                    },
                    {
                      "label": "Type",
                      "name": "type",
                      "type": "string",
                      "options": [
                        {
                          "label": "Button",
                          "value": "button"
                        },
                        {
                          "label": "Link",
                          "value": "link"
                        }
                      ]
                    },
                    {
                      "label": "Icon",
                      "name": "icon",
                      "type": "boolean"
                    },
                    {
                      "label": "Link",
                      "name": "link",
                      "type": "string"
                    }
                  ]
                },
                {
                  "type": "object",
                  "label": "Image",
                  "name": "image",
                  "fields": [
                    {
                      "name": "src",
                      "label": "Image Source",
                      "type": "image"
                    },
                    {
                      "name": "alt",
                      "label": "Alt Text",
                      "type": "string"
                    }
                  ]
                },
                {
                  "type": "string",
                  "label": "Color",
                  "name": "color",
                  "options": [
                    {
                      "label": "Default",
                      "value": "default"
