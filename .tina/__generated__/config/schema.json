              },
              "fields": [
                {
                  "type": "string",
                  "label": "Tagline",
                  "name": "tagline"
                },
                {
                  "type": "string",
                  "label": "Headline",
                  "name": "headline"
                },
                {
                  "type": "string",
                  "label": "Text",
                  "name": "text",
                  "ui": {
                    "component": "markdown"
                  }
                },
                {
                  "label": "Actions",
                  "name": "actions",
                  "type": "object",
